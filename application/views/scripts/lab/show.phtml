<div id="sidebar">
    <?php echo $this->render('lab/_actionsBlock.phtml') ?>
    <?php if ($this->canEdit): ?>
        <?php echo $this->partial('lab/_editBlock.phtml', array(
            'post' => $this->post,
            'pendingRevisions' => $this->pendingRevisions
            )) ?>
    <?php endif ?>
